    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">School Infomation
                        <% if (school_info._path == "school_show") { %>
                        <a href="/school/edit"><small>Edit</small></a>
                        <% } else { %>
                        <small>Edit</small>
                        <% } %>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
                <div class="col-lg-7" style="padding-bottom:120px">
                    <% if (school_info._path == "school_show") { %>
                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <td class="dashboard-datafield">Name</td>
                                <td class="data"><%= school_info.name %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Code</td>
                                <td class="data"><%= school_info.code %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Address</td>
                                <td class="data"><%= school_info.address %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Postal Code</td>
                                <td class="data"><%= school_info.postalcode %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Phone</td>
                                <td class="data"><%= school_info.phone %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Email</td>
                                <td class="data"><%= school_info.email %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Website</td>
                                <td class="data"><%= school_info.website %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Date Opened</td>
                                <td class="data"><%= school_info.opendate %></td>
                            </tr>
                            <tr>
                                <td class="dashboard-datafield">Date Closed</td>
                                <td class="data"><%= school_info.closedate %></td>
                            </tr>
                            </tbody>
                        </table>
                    <% } else { %>
                    <form action="/school/edit" method="post">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" name="schoolname" value="<%= school_info.name %>"
                                   placeholder="Please Enter School Name"/>
                        </div>
                        <div class="form-group">
                            <label>Code</label>
                            <input class="form-control" value="<%= school_info.code %>" name="code"/>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" name="address" value="<%= school_info.address %>"
                                   placeholder=""/>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input class="form-control" value="<%= school_info.phone %>" name="phone"/>
                        </div>
                        <div class="form-group">
                            <label>Post Code</label>
                            <input class="form-control" type="text" value="<%= school_info.postalcode %>"
                                   name="postcode">
                        </div>
                        <div class="form-group">
                            <label>Website</label>
                            <input class="form-control" type="text" name="website" value="<%= school_info.website %>"
                                   placeholder="website"/>
                        </div>
                        <div class="form-group">
                            <label>Date open</label>
                            <input class="form-control" type="datetime" value="<%= school_info.opendate %>"
                                   name="dateopen"/>
                        </div>
                        <div class="form-group">
                            <label>Date Close</label>
                            <input class="form-control" type="datetime" value="<%= school_info.closedate %>"
                                   name="dateclose"/>
                        </div>
                        <button type="submit"  class="btn btn-default">Update Info</button>
                        <button type="reset" class="btn btn-default">Reset</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <!-- /.row -->
        </div>
